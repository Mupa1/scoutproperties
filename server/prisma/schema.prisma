generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String    @unique
  company   String?
  password  String
  avatar    String?
  createdAt DateTime  @default(now())
  listing   Listing[]
}

model Listing {
  id             String          @id @default(auto()) @map("_id") @db.ObjectId
  title          String
  images         String[]
  bedroom        Int
  bathroom       Int
  price          Int
  address        String
  city           String
  latitude       String
  longitude      String
  type           Type
  property       Property
  createdAt      DateTime        @default(now())
  user           User            @relation(fields: [userId], references: [id])
  userId         String          @db.ObjectId
  listingDetails ListingDetails?
}

enum Type {
  Buy
  Rent
}

enum Property {
  Apartment
  House
  Condo
  Land
}

enum Parking {
  Available
  Unavailable
}

model ListingDetails {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  description String
  parking     Parking?
  size        Int?
  school      Int?
  bus         Int?
  restaurant  Int?
  listing     Listing  @relation(fields: [listingId], references: [id])
  listingId   String   @unique @db.ObjectId
}
